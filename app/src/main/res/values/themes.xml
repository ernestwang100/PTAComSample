<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PTAComSample.Dark" parent="Base.Theme.PTAComSample">

        <!-- background photo -->
        <item name="android:windowBackground">@drawable/yellow_mountain</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/transparent</item>
<!--        <item name="android:windowTranslucentStatus" tools:targetApi="19" >true</item>-->
<!--        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PTAComSample.Light" parent="Base.Theme.PTAComSample">
        <!-- background photo -->
        <item name="android:windowBackground">@drawable/chill</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorOnPrimary">@color/red_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/transparent</item>
        <!-- Customize your theme here. -->
</style>

    <!-- Base application theme. -->
    <style name="Base.Theme.PTAComSample" parent="Theme.Material3.Light.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/background20230621</item>-->
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">400dp</item>
        <item name="android:windowMinWidthMinor">300dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="OpenerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name = "android:windowBackground">@drawable/jasslin_opener</item>
    </style>
</resources>
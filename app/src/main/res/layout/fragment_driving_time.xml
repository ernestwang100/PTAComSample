<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".third.DrivingTimeFragment">


    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>




    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/driverTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver"
            android:textSize="30sp"
            android:layout_marginBottom="15sp"

            />



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus1"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"

                />

            <TextView
                android:id="@+id/drivertimeTV1"
                android:layout_width="wrap_content"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"
                android:textSize="25sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus2"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:id="@+id/drivertimeTV2"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus3"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"

                />

            <TextView
                android:id="@+id/drivertimeTV3"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"></TextView>


        </TableRow>


        <TextView
            android:id="@+id/codriverTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coDriver"
            android:textSize="30sp"
            android:layout_marginBottom="15sp"

            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus1"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:id="@+id/codrivertimeTV1"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus2"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:id="@+id/codrivertimeTV2"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driverstatus3"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                />

            <TextView
                android:id="@+id/codrivertimeTV3"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginEnd="5sp"
                android:hint="@string/drivingtime"></TextView>



        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

